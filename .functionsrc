#!/bin/bash

function git-lazy () {
    git add .
    git commit -a -m "$1"
    git push
}

function git-filter-rm () {
    git filter-branch --tree-filter 'rm -rf $@' HEAD
}

function find-delete () {
    find . -name "$1" -type f -delete
}

function dns-flush () {
    sudo dscacheutil -flushcache
    sudo killall -HUP mDNSResponder
}

function m-clean () {
    docker run -v /var/run/docker.sock:/var/run/docker.sock -v \
           /var/lib/docker:/var/lib/docker --rm martin/docker-cleanup-volumes
    docker system prune -f | echo "Skipping..."
    docker rmi $(docker images -q -f dangling=true) | echo "Skipping..."
}

function m-create() {
    if [ $# -eq 0 ]
    then
	echo "Usage: m-create <name>"
    else
	docker-machine create --driver virtualbox --virtualbox-memory 4096 \
            --virtualbox-disk-size 100000 "$1"
    fi
}

function m-env () {
    if [ $# -eq 0 ]
    then
	echo "Usage: m-env <environment>"
    else
	eval $(docker-machine env "$1")
    fi
}

