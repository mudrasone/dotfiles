#!/bin/bash

function git-lazy () {
    git add .
    git commit -a -m "$1"
    git push
}

function git-filter-rm () {
    git filter-branch --tree-filter 'rm -rf $@' HEAD
}

function find-rm () {
    find . -name "$1" -type f -delete
}

function dns-flush () {
    sudo dscacheutil -flushcache
    sudo killall -HUP mDNSResponder
}

function m-clean () {
    docker run -v /var/run/docker.sock:/var/run/docker.sock -v \
           /var/lib/docker:/var/lib/docker --rm martin/docker-cleanup-volumes
    docker system prune -f
    docker rmi $(docker images -q -f dangling=true)
}

function m-create() {
    if [ $# -eq 0 ]
    then
	echo "Usage: dmc <name>"
    else
	docker-machine create --driver virtualbox --virtualbox-memory 4096 \
            --virtualbox-disk-size 80000 "$1"
    fi
}

function m-env () {
    if [ $# -eq 0 ]
    then
	echo "Usage: dme <name>"
    else
	eval $(docker-machine env "$1")
    fi
}

alias c="docker-compose"
alias m="/usr/local/bin/docker-machine"
alias d="/usr/local/bin/docker"
alias e="emacs -nw"
alias ctags="`brew --prefix`/bin/ctags"
alias l="/bin/ls -aG"
